{
  "key": "group_video_testimonial_section_fields",
  "title": "Video Testimonial Section Fields",
  "fields": [
    {
      "key": "field_video_testimonial_section_layout",
      "label": "Layout",
      "name": "layout",
      "type": "select",
      "required": 1,
      "choices": {
        "1": "Variant 1",
        "2": "Variant 2",
        "3": "Variant 3"
      },
      "default_value": "1",
      "return_format": "value",
      "instructions": "Variant 1: Two video cards side by side. Variant 2: Video card + text testimonial cards. Variant 3: Two video cards + text testimonial slider."
