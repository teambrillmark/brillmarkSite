{
  "key": "group_video_testimonial_section_fields",
  "title": "Video Testimonial Section Fields",
  "fields": [
    {
      "key": "field_vts_layout",
      "label": "Layout",
      "name": "layout",
      "type": "select",
      "required": 1,
      "choices": {
        "1": "Variant 1",
        "2": "Variant 2",
        "3": "Variant 3"
      },
      "default_value": "1",
      "return_format": "value",
      "instructions": "Variant 1: Two video cards side by side. Variant 2: Video card + stacked text testimonials. Variant 3: Two video cards + text testimonial slider."
    },
    {
      "key": "field_vts_title",
      "label": "Title",
      "name": "title",
      "type": "text",
      "required": 1,
      "default_value": "What Our Clients Say About Us?"
    },
    {
      "key": "field_vts_description",
      "label": "Description",
      "name": "description",
      "type": "textarea",
      "rows": 3,
      "instructions": "Shown in Variants 1 and 3 only.",
      "conditional_logic": [
        [
          {
            "field": "field_vts_layout",
            "operator": "==",
            "value": "1"
          }
        ],
        [
          {
            "field": "field_vts_layout",
            "operator": "==",
            "value": "3"
          }
        ]
      ]
    },
    {
      "key": "field_vts_flip_layout",
      "label": "Flip Layout",
      "name": "flip_layout",
      "type": "true_false",
      "default_value": 0,
      "ui": 1,
      "instructions": "Swap the video and text columns (Variant 2 only).",
      "conditional_logic": [
        [
          {
            "field": "field_vts_layout",
            "operator": "==",
            "value": "2"
          }
        ]
      ]
    },
    {
      "key": "field_vts_video_testimonials",
      "label": "Video Testimonials",
      "name": "video_testimonials",
      "type": "repeater",
      "min": 1,
      "max": 4,
      "layout": "block",
      "button_label": "Add Video Testimonial",
      "sub_fields": [
        {
          "key": "field_vts_vt_video_thumbnail",
          "label": "Video Thumbnail",
          "name": "video_thumbnail",
          "type": "image",
          "return_format": "array",
          "preview_size": "medium",
          "instructions": "Optional. Shown only when Wistia Video ID is empty."
        },
        {
          "key": "field_vts_vt_video_id",
          "label": "Wistia Video ID",
          "name": "video_id",
          "type": "text",
          "instructions": "The Wistia video hash ID (e.g. abc123def4)."
        },
        {
          "key": "field_vts_vt_quote_text",
          "label": "Quote",
          "name": "quote_text",
          "type": "textarea",
          "rows": 4
        },
        {
          "key": "field_vts_vt_company_logo",
          "label": "Company Logo",
          "name": "company_logo",
          "type": "image",
          "return_format": "array",
          "preview_size": "thumbnail"
        },
        {
          "key": "field_vts_vt_person_name",
          "label": "Person Name",
          "name": "person_name",
          "type": "text"
        },
        {
          "key": "field_vts_vt_person_title",
          "label": "Person Title",
          "name": "person_title",
          "type": "text"
        }
      ]
    },
    {
      "key": "field_vts_text_testimonials",
      "label": "Text Testimonials",
      "name": "text_testimonials",
      "type": "repeater",
      "min": 1,
      "max": 10,
      "layout": "block",
      "button_label": "Add Text Testimonial",
      "instructions": "Used in Variant 2 (stacked cards) and Variant 3 (slider).",
      "conditional_logic": [
        [
          {
            "field": "field_vts_layout",
            "operator": "==",
            "value": "2"
          }
        ],
        [
          {
            "field": "field_vts_layout",
            "operator": "==",
            "value": "3"
          }
        ]
      ],
      "sub_fields": [
        {
          "key": "field_vts_tt_quote_text",
          "label": "Quote",
          "name": "quote_text",
          "type": "textarea",
          "rows": 4,
          "required": 1
        },
        {
          "key": "field_vts_tt_company_logo",
          "label": "Company Logo",
          "name": "company_logo",
          "type": "image",
          "return_format": "array",
          "preview_size": "thumbnail"
        },
        {
          "key": "field_vts_tt_person_name",
          "label": "Person Name",
          "name": "person_name",
          "type": "text"
        },
        {
          "key": "field_vts_tt_person_title",
          "label": "Person Title",
          "name": "person_title",
          "type": "text"
        }
      ]
    },
    {
      "key": "field_vts_common_images",
      "label": "Common Images",
      "name": "common_images",
      "type": "gallery",
      "instructions": "Upload images to display in this section (e.g. logos, thumbnails). Shown above the main content.",
      "required": 0,
      "return_format": "array",
      "preview_size": "medium",
      "library": "all",
      "min": 0,
      "max": 0
    },
    {
      "key": "field_vts_slides_per_view",
      "label": "Slides per view",
      "name": "slides_per_view",
      "type": "number",
      "instructions": "Number of testimonial slides visible at once (Layout 3 slider). 1â€“5.",
      "required": 0,
      "default_value": 1,
      "min": 1,
      "max": 5,
      "step": 1,
      "conditional_logic": [
        [{ "field": "field_vts_layout", "operator": "==", "value": "3" }]
      ]
    },
    {
      "key": "field_vts_section_background",
      "label": "Section background",
      "name": "section_background",
      "type": "text",
      "instructions": "CSS background value. Supports solid colors and gradients.",
      "required": 0,
      "placeholder": "e.g. linear-gradient(135deg, #667eea 0%, #764ba2 100%)"
    },
    {
      "key": "field_vts_quote_icon",
      "label": "Quote icon",
      "name": "quote_icon",
      "type": "image",
      "instructions": "Upload a custom quote icon image. Used in text testimonials (Layout 2 and 3). Leave empty to use the default SVG/character.",
      "required": 0,
      "return_format": "array"
    }
  ],
  "location": [
    [
      {
        "param": "block",
        "operator": "==",
        "value": "acf/video-testimonial-section"
      }
    ]
  ]
}
