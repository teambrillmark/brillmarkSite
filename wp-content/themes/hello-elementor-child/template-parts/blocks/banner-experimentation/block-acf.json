[
    {
        "key": "group_banner_experimentation",
        "title": "Banner Experimentation Block Fields",
        "fields": [
            {
                "key": "field_banner_experimentation_eyebrow",
                "label": "Eyebrow",
                "name": "eyebrow",
                "type": "text",
                "instructions": "Small label above the title",
                "default_value": "A/B TEST DEVELOPMENT TEAM"
            },
            {
                "key": "field_banner_experimentation_title",
                "label": "Title",
                "name": "title",
                "type": "textarea",
                "instructions": "Main heading (use line breaks for <br>)",
                "default_value": "Elevate Your\nExperimentation Program"
            },
            {
                "key": "field_banner_experimentation_description",
                "label": "Description",
                "name": "description",
                "type": "textarea",
                "instructions": "Paragraph text below the title",
                "default_value": "Across DTC, B2B, B2C, and eCommerce, our advanced A/B test development and digital solutions consistently drive measurable growth. Join the companies that rely on BrillMark to elevate their experimentation strategy."
            },
            {
                "key": "field_banner_experimentation_points",
                "label": "Bullet Points",
                "name": "points",
                "type": "repeater",
                "instructions": "List items displayed with checkmark style",
                "min": 0,
                "max": 10,
                "layout": "block",
                "button_label": "Add Point",
                "sub_fields": [
                    {
                        "key": "field_banner_experimentation_point_text",
                        "label": "Point",
                        "name": "point_text",
                        "type": "text",
                        "default_value": ""
                    }
                ]
            },
            {
                "key": "field_banner_experimentation_btn_text",
                "label": "Button Text",
                "name": "btn_text",
                "type": "text",
                "instructions": "CTA button label",
                "default_value": "Schedule your FREE strategy session"
            },
            {
                "key": "field_banner_experimentation_btn_link",
                "label": "Button Link",
                "name": "btn_link",
                "type": "url",
                "instructions": "Button URL",
                "default_value": "#"
            },
            {
                "key": "field_banner_experimentation_video_url",
                "label": "Video Embed URL",
                "name": "video_url",
                "type": "url",
                "instructions": "Wistia or other embed iframe src URL",
                "default_value": "https://fast.wistia.net/embed/iframe/fcqg5l1o2j?web_component=true&seo=false"
            },
            {
                "key": "field_banner_experimentation_video_title",
                "label": "Video Title",
                "name": "video_title",
                "type": "text",
                "instructions": "Accessible title for the video iframe",
                "default_value": "IMG_1152-1 Video"
            },
            {
                "key": "field_banner_experimentation_quote",
                "label": "Quote",
                "name": "quote",
                "type": "textarea",
                "instructions": "Testimonial or quote text",
                "default_value": "\"We are not just writing code, we are solving problems.\""
            },
            {
                "key": "field_banner_experimentation_author",
                "label": "Quote Author",
                "name": "author",
                "type": "text",
                "instructions": "Name and title of the quote author",
                "default_value": "Abdullah Mashuk | CEO | BrillMark"
            },
            {
                "key": "field_banner_experimentation_tools_logos",
                "label": "Tools / Partner Logos",
                "name": "tools_logos",
                "type": "repeater",
                "instructions": "Logos displayed in the tools list",
                "min": 0,
                "max": 20,
                "layout": "block",
                "button_label": "Add Logo",
                "sub_fields": [
                    {
                        "key": "field_banner_experimentation_logo_image",
                        "label": "Logo Image",
                        "name": "logo_image",
                        "type": "image",
                        "return_format": "array"
                    },
                    {
                        "key": "field_banner_experimentation_logo_alt",
                        "label": "Alt Text",
                        "name": "logo_alt",
                        "type": "text",
                        "instructions": "Accessible alt text for the logo"
                    }
                ]
            }
        ],
        "location": [
            [
                {
                    "param": "block",
                    "operator": "==",
                    "value": "acf/banner-experimentation"
                }
            ]
        ],
        "description": "Fields for Banner Experimentation custom block"
    }
]
