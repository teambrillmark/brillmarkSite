[
    {
        "key": "group_migration_process",
        "title": "Migration Process Block Fields",
        "fields": [
            {
                "key": "field_migration_process_heading",
                "label": "Section Heading",
                "name": "heading",
                "type": "text",
                "instructions": "Main heading for the migration process section",
