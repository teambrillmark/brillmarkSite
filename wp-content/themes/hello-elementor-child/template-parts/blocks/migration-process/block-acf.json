                "instructions": "Add each week/phase of the migration process",
                "min": 1,
                "max": 10,
                "layout": "block",
                "button_label": "Add Card",
                "sub_fields": [
                    {
                        "key": "field_migration_process_week_label",
                        "label": "Week Label",
                        "name": "week_label",
                        "type": "text",
                        "instructions": "Label for the week (e.g. \"Week 1\")",
                        "default_value": "Week 1"
                    },
                    {
                        "key": "field_migration_process_card_title",
                        "label": "Card Title",
                        "name": "card_title",
                        "type": "text",
                        "instructions": "Title for this step",
                        "default_value": "Discovery & Planning"
                    },
                    {
                        "key": "field_migration_process_card_desc",
                        "label": "Card Description",
                        "name": "card_desc",
                        "type": "textarea",
                        "instructions": "Short description for this step",
                        "default_value": "Complete migration strategy document."
                    },
                    {
                        "key": "field_migration_process_checklist",
                        "label": "Checklist Items",
                        "name": "checklist",
                        "type": "repeater",
                        "instructions": "Bullet list items for this card",
                        "min": 0,
                        "max": 15,
                        "layout": "table",
                        "button_label": "Add Item",
                        "sub_fields": [
                            {
                                "key": "field_migration_process_checklist_item",
                                "label": "Item",
                                "name": "item",
                                "type": "text",
                                "default_value": "Timeline and requirements"
                            }
                        ]
                    }
                ]
            },
            {
                "key": "field_migration_process_cta_title",
                "label": "CTA Title",
                "name": "cta_title",
                "type": "text",
                "instructions": "Heading for the call-to-action box",
                "default_value": "Migration Completed"
            },
            {
                "key": "field_migration_process_cta_text",
                "label": "CTA Text",
                "name": "cta_text",
                "type": "text",
                "instructions": "Supporting text below the CTA title",
                "default_value": "with 30 days of premium support included!"
            },
            {
                "key": "field_migration_process_cta_button_text",
                "label": "CTA Button Text",
                "name": "cta_button_text",
                "type": "text",
                "instructions": "Text for the CTA button",
                "default_value": "Ready to Migrate!"
            },
            {
                "key": "field_migration_process_cta_button_url",
                "label": "CTA Button URL",
                "name": "cta_button_url",
                "type": "url",
                "instructions": "Link URL for the CTA button",
                "default_value": "#"
            }
