{
  "key": "group_testimonial_section_fields",
  "title": "Testimonial Section Fields",
  "fields": [
    {
      "key": "field_testimonial_section_label",
      "label": "Section Label",
      "name": "section_label",
      "type": "text",
      "required": 0,
      "default_value": "TESTIMONONIAL",
      "placeholder": "e.g. TESTIMONONIAL",
      "wrapper": { "width": "50" }
    },
    {
      "key": "field_testimonial_section_heading",
      "label": "Section Heading",
      "name": "section_heading",
      "type": "text",
      "required": 1,
      "default_value": "What Our Clients Say about Us?",
      "placeholder": "Enter section heading",
      "wrapper": { "width": "50" }
    },
    {
      "key": "field_testimonial_section_quote_icon",
      "label": "Quote Icon",
      "name": "quote_icon",
      "type": "image",
      "return_format": "array",
      "preview_size": "thumbnail",
      "wrapper": { "width": "100" }
    },
    {
      "key": "field_testimonial_section_testimonials",
      "label": "Testimonials",
      "name": "testimonials",
      "type": "repeater",
      "required": 1,
      "min": 1,
      "layout": "block",
      "button_label": "Add Testimonial",
      "sub_fields": [
        {
          "key": "field_testimonial_section_person_image",
          "label": "Person Image",
          "name": "person_image",
          "type": "image",
          "return_format": "array",
          "preview_size": "medium"
        },
        {
          "key": "field_testimonial_section_review_text",
          "label": "Review / Quote Text",
          "name": "review_text",
          "type": "textarea",
          "required": 1,
          "rows": 4,
          "placeholder": "Testimonial text..."
        },
        {
          "key": "field_testimonial_section_company_logo",
          "label": "Company Logo",
          "name": "company_logo",
          "type": "image",
          "return_format": "array",
          "preview_size": "medium"
        },
        {
          "key": "field_testimonial_section_person_name",
          "label": "Person Name",
          "name": "person_name",
          "type": "text",
          "required": 1,
          "placeholder": "e.g. Amara Abara"
        },
        {
          "key": "field_testimonial_section_person_designation",
          "label": "Designation / Title",
          "name": "person_designation",
          "type": "text",
          "placeholder": "e.g. Founder at Conversion Central"
        }
      ]
    }
  ],
  "location": [
    [
      {
        "param": "block",
        "operator": "==",
        "value": "acf/testimonial-section"
      }
    ]
  ],
  "menu_order": 0,
  "position": "normal",
  "style": "default",
  "label_placement": "top",
  "instruction_placement": "label",
  "active": true,
  "description": "Fields for the Testimonial Section block: label, heading, quote icon, and repeater of testimonials (person image, review, company logo, name, designation)."
}
