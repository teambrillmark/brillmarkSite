{
  "key": "group_contact_us_page_section_fields",
  "title": "Contact Us Page Section Fields",
  "fields": [
    {
      "key": "field_contact_us_page_section_title",
      "label": "Title",
      "name": "title",
      "type": "text",
      "required": 1,
      "default_value": "Let's get in touch"
    },
    {
      "key": "field_contact_us_page_section_subtitle",
      "label": "Subtitle",
      "name": "subtitle",
      "type": "textarea",
      "required": 0,
      "default_value": "We will get back to you in 24 hours with a solution or a proposal",
      "rows": 2
    },
    {
      "key": "field_contact_us_page_section_form_code",
      "label": "Form Code",
      "name": "form_code",
      "type": "textarea",
      "required": 0,
      "instructions": "Enter the complete HTML form code. This will be output directly inside the form wrapper.",
      "default_value": "",
      "placeholder": "<form method=\"post\">\n  <!-- Your form fields here -->\n</form>",
      "rows": 12,
      "new_lines": ""
    },
    {
      "key": "field_contact_us_page_section_whats_next_title",
      "label": "What's Next Title",
      "name": "whats_next_title",
      "type": "text",
      "required": 0,
      "default_value": "What's next?"
    },
    {
      "key": "field_contact_us_page_section_steps",
      "label": "Steps",
      "name": "steps",
      "type": "repeater",
      "required": 0,
      "layout": "block",
      "min": 1,
      "sub_fields": [
        {
          "key": "field_contact_us_page_section_step_title",
          "label": "Step Title",
          "name": "step_title",
          "type": "text",
          "required": 1
        },
        {
          "key": "field_contact_us_page_section_step_description",
          "label": "Step Description",
          "name": "step_description",
          "type": "textarea",
          "required": 0,
          "rows": 3
        },
        {
          "key": "field_contact_us_page_section_step_extra_text",
          "label": "Step Extra Text",
          "name": "step_extra_text",
          "type": "textarea",
          "required": 0,
          "rows": 3,
          "instructions": "Optional additional paragraph shown below the main description."
        }
      ],
      "default_value": [
        {
          "step_title": "STEP 1 – Proposal",
          "step_description": "Once we receive your inquiry, we will send you high-level proposal that will give you an overview of our services and processes",
          "step_extra_text": ""
        },
        {
          "step_title": "STEP 2 – Introduction call",
          "step_description": "We will schedule a meeting in order to get better understanding of your testing requirements and explain our development process",
          "step_extra_text": ""
        },
        {
          "step_title": "STEP 3 – Let's start testing",
          "step_description": "Once the onboarding is completed, we can immediately start testing",
          "step_extra_text": "We would like to hear your feedback so send us an email or reach out via our social media accounts."
        }
      ]
    },
    {
      "key": "field_contact_us_page_section_email_address",
      "label": "Email Address",
      "name": "email_address",
      "type": "email",
      "required": 0,
      "default_value": "info@brillmark.com"
    },
    {
      "key": "field_contact_us_page_section_email_label",
      "label": "Email Label",
      "name": "email_label",
      "type": "text",
      "required": 0,
      "default_value": "Email: info@brillmark.com"
    },
    {
      "key": "field_contact_us_page_section_social_links",
      "label": "Social Links",
      "name": "social_links",
      "type": "repeater",
      "required": 0,
      "layout": "table",
      "min": 1,
      "sub_fields": [
        {
          "key": "field_contact_us_page_section_social_platform",
          "label": "Platform",
          "name": "platform",
          "type": "select",
          "choices": {
            "linkedin": "LinkedIn",
            "twitter": "Twitter",
            "facebook": "Facebook",
            "instagram": "Instagram"
          },
          "required": 1
        },
        {
          "key": "field_contact_us_page_section_social_url",
          "label": "URL",
          "name": "url",
          "type": "url",
          "required": 1
        },
        {
          "key": "field_contact_us_page_section_social_icon",
          "label": "Icon",
          "name": "icon",
          "type": "image",
          "return_format": "url",
          "instructions": "Upload SVG or PNG icon (white on transparent preferred)."
        }
      ],
      "default_value": [
        { "platform": "linkedin", "url": "https://www.linkedin.com/company/brillmark/", "icon": "" },
        { "platform": "twitter", "url": "https://twitter.com/brillmark", "icon": "" },
        { "platform": "facebook", "url": "https://www.facebook.com/brillmark", "icon": "" }
      ]
    }
  ],
